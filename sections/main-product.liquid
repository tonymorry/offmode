{%- comment -%}
  Recupero dell'oggetto prodotto dalle impostazioni della sezione.
  Assicurati che nelle impostazioni del tema (Editor) sia selezionato un prodotto.
{%- endcomment -%}

{%- assign product = section.settings.product -%}
{%- assign current_variant = product.selected_or_first_available_variant -%}

<section id="prodotto" class="py-32 px-6 bg-white border-y border-[#e5e1d8]">
  {% if product != blank %}
    <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-24">
      
      <div class="lg:sticky lg:top-32 h-fit">
        <div class="bg-[#f9f7f2] aspect-square flex items-center justify-center p-16 border border-[#e5e1d8] relative overflow-hidden group">
          <img id="MainProductImage" 
               src="{{ current_variant.featured_image | default: product.featured_image | img_url: '1200x' }}" 
               class="w-full h-full object-contain mix-blend-multiply transition-transform duration-700 group-hover:scale-110" 
               alt="{{ product.title }}">
        </div>
        
        <div class="grid grid-cols-4 sm:grid-cols-5 gap-4 mt-6">
          {% for image in product.images %}
            <div class="aspect-square border border-[#e5e1d8] bg-[#f9f7f2] cursor-pointer hover:border-black transition-all"
                 onclick="document.getElementById('MainProductImage').src='{{ image | img_url: '1200x' }}'">
              <img src="{{ image | img_url: '400x400', crop: 'center' }}" class="w-full h-full object-contain mix-blend-multiply">
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="flex flex-col justify-center">
        <div class="mb-12">
          <span class="text-[10px] font-black uppercase tracking-[0.3em] py-1 px-3 border border-black inline-block mb-6">Edizione Originale</span>
          <h2 class="serif text-5xl md:text-6xl mb-6 text-[#1a1a1a]">{{ product.title }}</h2>
          <div class="flex items-baseline space-x-6 mb-8">
            <span id="ProductPrice" class="text-4xl font-medium text-[#1a1a1a]">{{ current_variant.price | money }}</span>
            {% if current_variant.compare_at_price > current_variant.price %}
              <span class="text-xl text-gray-300 line-through">{{ current_variant.compare_at_price | money }}</span>
            {% endif %}
          </div>
          <div class="text-gray-500 leading-relaxed text-lg font-light mb-8">
            {{ product.description }}
          </div>
        </div>

        {% form 'product', product, class: 'product-form space-y-8' %}
          <input type="hidden" name="id" id="variant-id-input" value="{{ current_variant.id }}">
          
          {% unless product.has_only_default_variant %}
            <div class="p-8 bg-[#f9f7f2] border border-[#e5e1d8]">
              {% for option in product.options_with_values %}
                <div class="selector-wrapper mb-6 last:mb-0">
                  <label class="block text-[9px] font-bold uppercase tracking-widest text-gray-400 mb-4">
                    {{ option.name }}: <span class="text-black" id="option-{{ forloop.index }}-value">{{ option.selected_value }}</span>
                  </label>

                  {% if option.name == 'Colore' or option.name == 'Color' %}
                    <div class="flex flex-wrap gap-4">
                      {% for value in option.values %}
                        {%- assign variant_for_value = product.variants | where: "option1", value | first -%}
                        <button type="button" 
                                class="color-swatch-btn w-10 h-10 rounded-full border-2 transition-all flex items-center justify-center {% if option.selected_value == value %}border-black{% else %}border-transparent{% endif %}"
                                data-value="{{ value | escape }}"
                                data-variant-id="{{ variant_for_value.id }}"
                                data-image="{{ variant_for_value.featured_image | img_url: '1200x' }}"
                                style="background-color: {{ value | split: ' ' | last | handle }}; border: 1px solid #e5e1d8;">
                          <span class="sr-only">{{ value }}</span>
                        </button>
                      {% endfor %}
                    </div>
                  {% else %}
                    <select class="w-full p-4 border border-[#e5e1d8] bg-white text-xs font-bold uppercase tracking-widest outline-none focus:border-black transition-all">
                      {% for value in option.values %}
                        <option value="{{ value | escape }}" {% if option.selected_value == value %}selected{% endif %}>
                          {{ value }}
                        </option>
                      {% endfor %}
                    </select>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% endunless %}

          <div class="space-y-6">
            <button type="submit" name="add" class="w-full bg-black text-white py-7 text-[11px] font-black uppercase tracking-[0.4em] hover:bg-zinc-800 transition-all">
              {% if current_variant.available %}
                Aggiungi al Carrello
              {% else %}
                Esaurito
              {% endif %}
            </button>
          </div>
        {% endform %}
      </div>
    </div>
  {% else %}
    <div class="text-center py-20 italic text-gray-400 border border-dashed border-gray-200">
      Seleziona un prodotto nell'editor del tema (Sezione Showcase Prodotto).
    </div>
  {% endif %}
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swatches = document.querySelectorAll('.color-swatch-btn');
    const mainImg = document.getElementById('MainProductImage');
    const variantInput = document.getElementById('variant-id-input');
    const colorLabel = document.getElementById('option-1-value'); // Assume che il colore sia la prima opzione

    swatches.forEach(swatch => {
      swatch.addEventListener('click', function(e) {
        e.preventDefault();
        
        // 1. Cambia l'immagine principale
        const newImgUrl = this.getAttribute('data-image');
        if (newImgUrl && !newImgUrl.includes('no-image')) {
          mainImg.src = newImgUrl;
        }

        // 2. Aggiorna l'ID della variante per il carrello
        const variantId = this.getAttribute('data-variant-id');
        variantInput.value = variantId;

        // 3. Aggiorna il testo dell'etichetta
        if (colorLabel) {
          colorLabel.innerText = this.getAttribute('data-value');
        }

        // 4. Aggiorna lo stato visivo dei pallini (bordo nero sul selezionato)
        swatches.forEach(s => s.classList.remove('border-black'));
        swatches.forEach(s => s.classList.add('border-transparent'));
        this.classList.remove('border-transparent');
        this.classList.add('border-black');
      });
    });
  });
</script>

{% schema %}
{
  "name": "Showcase Prodotto",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Seleziona Prodotto"
    }
  ],
  "presets": [{ "name": "Showcase Prodotto" }]
}
{% endschema %}
