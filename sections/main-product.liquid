
{% assign current_variant = product.selected_or_first_available_variant %}

<section id="prodotto" class="py-32 px-6 bg-white border-y border-[#e5e1d8] relative">
  <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-24">
    
    <div class="lg:sticky lg:top-32 h-fit">
      <div class="bg-[#f9f7f2] aspect-square flex items-center justify-center p-16 border border-[#e5e1d8] relative overflow-hidden group">
        <img src="{{ product.featured_image | img_url: '1000x' }}" class="w-full h-full object-contain mix-blend-multiply" alt="{{ product.title }}">
      </div>
      <div class="grid grid-cols-4 gap-4 mt-6">
        {% for image in product.images %}
          <div class="aspect-square border border-[#e5e1d8] bg-[#f9f7f2]">
            <img src="{{ image | img_url: '200x200', crop: 'center' }}" class="w-full h-full object-contain mix-blend-multiply">
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="flex flex-col justify-center">
      <div class="mb-12">
        <h2 class="serif text-5xl md:text-6xl mb-6 text-[#1a1a1a]">{{ product.title }}</h2>
        <div class="flex items-baseline space-x-6 mb-8">
          <span class="text-4xl font-medium text-[#1a1a1a]">{{ current_variant.price | money }}</span>
          {% if current_variant.compare_at_price > current_variant.price %}
            <span class="text-xl text-gray-300 line-through">{{ current_variant.compare_at_price | money }}</span>
          {% endif %}
        </div>
        <div class="text-gray-500 leading-relaxed text-lg font-light mb-8">
          {{ product.description }}
        </div>
      </div>

      {% form 'product', product %}
        <input type="hidden" name="id" value="{{ current_variant.id }}">
        <div class="space-y-6">
          <button type="submit" name="add" class="w-full bg-black text-white py-7 text-[11px] font-black uppercase tracking-[0.4em] hover:bg-zinc-800 transition-all">
            {{ 'products.product.add_to_cart' | t | default: 'Aggiungi al Carrello' }}
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Display",
  "settings": [],
  "presets": [{ "name": "Product Display" }]
}
{% endschema %}
